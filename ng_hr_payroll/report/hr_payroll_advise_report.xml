<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="ng_payroll_advise_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <span>
                                Print Date:
                                <t t-esc="time.strftime('%Y-%m-%d')"/>
                            </span>
                            <br/>
                            <span>
                                Payment Advice Date:
                                <span t-field="o.date"/>
                            </span>
                            <br/>
                            <br/>
                            <span>
                                <b>To,</b>
                            </span>
                            <br/>
                            <span>
                                <b>The Manager</b>
                            </span>
                            <br/>
                            <br/>
                            <span>
                                <b>
                                    <t t-esc="o.bank_id.name"/>
                                    Bank
                                </b>
                            </span>
                            <br/>
                            <br/>
                            <span>Dear Sir/Madam,</span>
                            <br/>
                            <div style="text-align:center;">
                                <span>
                                    <b>
                                        Payment Advice of
                                        <t t-esc="o.name"/>
                                        on A/C no.
                                        <t t-esc="o.bank_account_no or ''"/>
                                    </b>
                                </span>
                            </div>
                            <span>
                                <t t-esc="o.note"/>
                            </span>
                            <table class="table">
                                <thead>
                                    <tr style="border-top:2px solid black;">
                                        <th>SI. No.</th>
                                        <th>Name of the Employee</th>
                                        <th>Bank Name</th>
                                        <th>Bank Account No.</th>
                                        <t t-if="o.neft == True">
                                            <th>IFSC Code</th>
                                        </t>
                                        <th>By Salary</th>
                                        <th>C/D</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="get_detail(o.line_ids)" t-as="line" style="page-break-inside: avoid;"
                                        >
                                        <td>
                                            <span t-esc="line['count']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['name']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['bank_name']"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['acc_no']"/>
                                        </td>
                                        <t t-if="o.neft == True">
                                            <td>
                                                <span t-esc="line['ifsc_code']"/>
                                            </td>
                                        </t>
                                        <td>
                                            <span>
                                                <t t-esc="line['bysal']"/>
                                                <t t-esc="company.currency_id and company.currency_id.symbol"/>
                                            </span>
                                        </td>
                                        <td>
                                            <span t-esc="line['debit_credit']"/>
                                        </td>
                                    </tr>
                                </tbody>
                                <tr style="border-top:2px solid black;border-bottom:2px solid black;">
                                    <td>
                                    </td>
                                    <td>
                                    </td>
                                    <td>
                                    </td>
                                    <td>
                                        <span>
                                            <b>Total :</b>
                                        </span>
                                    </td>
                                    <t t-if="o.neft == True">
                                        <td>
                                        </td>
                                    </t>
                                    <td>
                                        <span>
                                            <b>
                                                <t t-esc="get_bysal_total()"/>
                                                <t t-esc="company.currency_id and company.currency_id.symbol"/>
                                            </b>
                                        </span>
                                    </td>
                                    <td>
                                    </td>
                                </tr>
                            </table>
                            <table>
                                <tr style="border-bottom:2px solid black;">
                                    <td>
                                    </td>
                                </tr>
                                <tr style="border-top:hidden;">
                                    <td>Yours Sincerely</td>
                                </tr>
                                <tr style="border-top:hidden;">
                                    <td>
                                        For
                                        <t t-esc="company.name"/>
                                    </td>
                                </tr>
                                <tr style="border-top:hidden;">
                                    <td>
                                    </td>
                                </tr>
                                <tr style="border-top:hidden;">
                                    <td>Authorized Signature</td>
                                </tr>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
